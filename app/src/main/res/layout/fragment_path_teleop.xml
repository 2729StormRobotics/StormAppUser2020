<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frc_field_2020"
    tools:context=".PathTeleop">

    <CheckBox
        android:id="@+id/cboBehindShield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:fontFamily="@font/lato"
        android:text="Behind Shield"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cboFrontShield"
        app:layout_constraintEnd_toEndOf="@+id/cboFrontShield"
        app:layout_constraintStart_toStartOf="@+id/cboFrontShield" />

    <CheckBox
        android:id="@+id/cboFrontShield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/lato"
        android:text="Front Shield"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cboBehindLine"
        app:layout_constraintEnd_toEndOf="@+id/cboBehindLine"
        app:layout_constraintStart_toStartOf="@+id/cboBehindLine" />

    <CheckBox
        android:id="@+id/cboBehindControlPanel"
        android:layout_width="141dp"
        android:layout_height="53dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/lato"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Behind Wheel"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cboFrontControlPanel"
        app:layout_constraintStart_toStartOf="@+id/cboFrontControlPanel" />

    <CheckBox
        android:id="@+id/cboFrontControlPanel"
        android:layout_width="103dp"
        android:layout_height="63dp"
        android:layout_marginStart="44dp"
        android:fontFamily="@font/lato"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Front Wheel"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cboFrontShield"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cboPortSafeZone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/lato"
        android:text="Port Safe Zone"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/cboBehindLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/lato"
        android:text="Behind Line"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cboFrontLine"
        app:layout_constraintStart_toStartOf="@+id/cboFrontLine" />

    <CheckBox
        android:id="@+id/cboFrontLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/lato"
        android:text="Front Line"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>