<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/darkRed" /> <!-- dark red -->
            <stroke android:width="4dp" android:color="@color/stormRed" android:radius="16dp" /> <!-- storm red -->
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/stormRed" /> <!-- storm red -->
            <stroke android:width="4dp" android:color="@color/lightRed" />
            <stroke />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- transparent -->
            <stroke android:width="4dp" android:color="@color/stormRed" /> <!-- storm red -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>