<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--    &lt;!&ndash;<item android:color="#00000000" android:state_checked="false" /> &lt;!&ndash; WHEN IS NOT CHECKED &ndash;&gt;-->
<!--    <item android:drawable="@drawable/toggle_button_red" android:state_checked="true"/> &lt;!&ndash; WHEN IS CHECKED &#45;&#45;-->
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/stormRed" /> <!-- dark red -->
            <stroke android:color="@color/stormRed" /> <!-- storm red -->
        </shape>
    </item>
    <item android:state_checkable="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/stormRed" /> <!-- storm red -->
            <stroke android:color="@color/stormRed" /> <!-- light red -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- transparent -->
            <stroke android:color="@color/stormRed" /> <!-- storm red -->
        </shape>
    </item>
</selector>