<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teleop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teleop" >

    <CheckBox
        android:id="@+id/cboPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lato"
        android:text="Position Control"
        android:textSize="14"
        app:layout_constraintEnd_toEndOf="@+id/btnMoreLVL3"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/btnLessLVL3"
        app:layout_constraintTop_toBottomOf="@+id/cboRC" />

    <Button
        android:id="@+id/btnMoreLVL1"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/my_button_orange"
        android:fontFamily="@font/lato"
        android:text="@string/plus"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLessLVL1"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginEnd="112dp"
        android:background="@drawable/my_button_red"
        android:fontFamily="@font/lato"
        android:text="@string/minus"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/btnMoreLVL1"
        app:layout_constraintEnd_toStartOf="@+id/btnMoreLVL1"
        app:layout_constraintTop_toTopOf="@+id/btnMoreLVL1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtLabelLVL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/lato"
        android:text="Bottom Port"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/txtNumScoredLVL1"
        app:layout_constraintEnd_toEndOf="@+id/btnMoreLVL1"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="@+id/btnLessLVL1" />

    <TextView
        android:id="@+id/txtNumScoredLVL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="0"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnMoreLVL1"
        app:layout_constraintEnd_toStartOf="@+id/btnMoreLVL1"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toEndOf="@+id/btnLessLVL1"
        app:layout_constraintTop_toTopOf="@+id/btnMoreLVL1" />

    <Button
        android:id="@+id/btnMoreLVL2"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/my_button_orange"
        android:fontFamily="@font/lato"
        android:text="@string/plus"
        android:textSize="18"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMoreLVL1" />

    <Button
        android:id="@+id/btnLessLVL2"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginEnd="112dp"
        android:background="@drawable/my_button_red"
        android:fontFamily="@font/lato"
        android:text="@string/minus"
        android:textSize="18"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/btnMoreLVL2"
        app:layout_constraintEnd_toStartOf="@+id/btnMoreLVL2"
        app:layout_constraintTop_toTopOf="@+id/btnMoreLVL2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtLabelLVL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/lato"
        android:text="Outer Port"
        android:textColor="#000000"
        android:textSize="18"
        app:layout_constraintBottom_toTopOf="@+id/txtNumScoredLVL2"
        app:layout_constraintEnd_toEndOf="@+id/btnMoreLVL2"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/btnLessLVL2" />

    <TextView
        android:id="@+id/txtNumScoredLVL2"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:fontFamily="@font/lato"
        android:text="0"
        android:textColor="#000000"
        android:textSize="18"
        app:layout_constraintBottom_toBottomOf="@+id/btnMoreLVL2"
        app:layout_constraintEnd_toStartOf="@+id/btnMoreLVL2"
        app:layout_constraintStart_toEndOf="@+id/btnLessLVL2"
        app:layout_constraintTop_toTopOf="@+id/btnMoreLVL2" />

    <Button
        android:id="@+id/btnMoreLVL3"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/my_button_orange"
        android:fontFamily="@font/lato"
        android:text="@string/plus"
        android:textSize="18"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMoreLVL2" />

    <Button
        android:id="@+id/btnLessLVL3"
        android:layout_width="60"
        android:layout_height="60"
        android:layout_marginEnd="112dp"
        android:background="@drawable/my_button_red"
        android:fontFamily="@font/lato"
        android:text="@string/minus"
        android:textSize="18"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="@+id/btnMoreLVL3"
        app:layout_constraintEnd_toStartOf="@+id/btnMoreLVL3"
        app:layout_constraintTop_toTopOf="@+id/btnMoreLVL3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtLabelLVL3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/lato"
        android:text="Inner Port"
        android:textColor="#000000"
        android:textSize="18"
        app:layout_constraintBottom_toTopOf="@+id/txtNumScoredLVL3"
        app:layout_constraintEnd_toEndOf="@+id/btnMoreLVL3"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/btnLessLVL3" />

    <TextView
        android:id="@+id/txtNumScoredLVL3"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:fontFamily="@font/lato"
        android:text="0"
        android:textColor="#000000"
        android:textSize="18"
        app:layout_constraintBottom_toBottomOf="@+id/btnMoreLVL3"
        app:layout_constraintEnd_toStartOf="@+id/btnMoreLVL3"
        app:layout_constraintStart_toEndOf="@+id/btnLessLVL3"
        app:layout_constraintTop_toTopOf="@+id/btnMoreLVL3" />

    <CheckBox
        android:id="@+id/cboRC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lato"
        android:text="Rotation Control"
        android:textSize="14"
        app:layout_constraintEnd_toEndOf="@+id/btnMoreLVL3"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/btnLessLVL3"
        app:layout_constraintTop_toBottomOf="@+id/btnMoreLVL3" />

</androidx.constraintlayout.widget.ConstraintLayout>